<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="x"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_round"
                android:id="@+id/dialogDeliveryForm_close"
                android:textAlignment="center"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/dialogDeliveryForm_close"
                android:id="@+id/orderProduct_linear3"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check and enter all your information for smooth delivery"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Full Name"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/dialogDeliveryForm_profileFullName"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/fullname"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="7dp"
                    android:editable="false"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone Number"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/dialogDeliveryForm_profilePhoneNumber"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/phone_number"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="7dp"
                    android:inputType="phone"/>


                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email Address"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/dialogDeliveryForm_profileEmailAddress"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/email"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="7dp"
                    android:editable="false"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Town Name"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/dialogDeliveryForm_townName"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/street_name"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="7dp"/>


                <MultiAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:hint="Enter your location. (This include street name, any available landmark or any popular building close to you)."
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/dialogDeliveryForm_profileLocation"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/locaation"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="7dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Make Payment"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="@drawable/button"
                    android:id="@+id/dialogDeliveryForm_order"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/white"
                    android:layout_margin="15dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>