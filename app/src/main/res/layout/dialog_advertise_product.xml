<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogAdvertise_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#41000000"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/advertisePromotionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#56000000"
        android:gravity="center"
        android:text="@string/title_advertiseText"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dialogAdvertise_eventPicture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/advertisePromotionText"
        android:background="@color/colorPrimaryDark" />

    <ViewFlipper
        android:id="@+id/dialogAdvertise_productPictureFlipper"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:background="#41000000" />

    <ImageView
        android:id="@+id/dialogAdvertise_productPicture"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:background="#41000000" />

    <TextView
        android:id="@+id/dialogAdvertise_discountPercent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/advertisePromotionText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="5dp"
        android:text="100% off"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogAdvertise_eventPicture"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialogAdvertise_productPicture1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/uncheck" />

        <ImageView
            android:id="@+id/dialogAdvertise_productPicture2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/uncheck" />

        <ImageView
            android:id="@+id/dialogAdvertise_productPicture3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/uncheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogAdvertise_linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogAdvertise_eventPicture"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="#41000000"
        android:orientation="horizontal"
        android:padding="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialogAdvertise_initialPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="GHCXXX"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dialogAdvertise_priceStroke"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="#FF0606" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dialogAdvertise_discountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:text="GHCXXX"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialogAdvertise_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogAdvertise_linear1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#41000000"
        android:padding="5dp"
        android:text="Product Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogAdvertise_advertisementDateAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogAdvertise_productName"
        android:layout_centerHorizontal="true"
        android:background="#41000000"
        android:padding="5dp"
        android:text="Time and Date"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogAdvertise_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/dialogAdvertise_advertisementDateAndTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/fade_back_circle"
        android:gravity="center"
        android:paddingTop="2dp"
        android:text="X"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogAdvertise_advertisementNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advertisePromotionText"
        android:layout_marginTop="5dp"
        android:background="#56000000"
        android:padding="5dp"
        android:text="1 - 6"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/dialogAdvertise_previous"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/fade_back_circle"
        android:padding="3dp"
        android:src="@drawable/previous" />

    <ImageView
        android:id="@+id/dialogAdvertise_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fade_back_circle"
        android:padding="3dp"
        android:src="@drawable/next" />

</RelativeLayout>