                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:textAlignment="center"
                    android:id="@+id/viewProductOrderDetails_postDelivery"/>

            </LinearLayout>

        </LinearLayout>

            <!--Total Amount-->
